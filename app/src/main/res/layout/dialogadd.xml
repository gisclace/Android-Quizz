<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_dialog_add"
    android:orientation="vertical"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:padding="10dp">
	<TextView
        android:text="FranÃ§ais"
        android:id="@+id/textViewProduitAdd"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

	<EditText
        android:id="@+id/editTextProduitAdd"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

	<TextView
        android:text="Anglais"
        android:id="@+id/textViewQuantiteAdd"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
	<EditText
        android:id="@+id/editTextQuantiteAdd"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="">
	</EditText>

	<LinearLayout
        android:orientation="horizontal"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content">

		<Button
            android:text="Ajouter"
            android:id="@+id/buttonAdd"
			android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Button>
		<Button
            android:text="Annuler"
            android:id="@+id/buttonCancel"
			android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Button>
	</LinearLayout>
</LinearLayout>
